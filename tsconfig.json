{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
    "resolveJsonModule": true,
		"lib": ["dom", "esnext"],
		"declaration": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"esModuleInterop": true
	},
  "include": ["src"]
}